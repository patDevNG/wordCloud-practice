{
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "nodenext",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "./types",
    ],
    "noImplicitAny": false,
    "strict": true,
    "experimentalDecorators": true,
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ]}
  }
}
